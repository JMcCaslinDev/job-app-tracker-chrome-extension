{
  "manifest_version": 3,
  "name": "Indeed Job Saver",
  "version": "1.0",
  "description": "Saves job data from Indeed to a database.",
  "permissions": [
      "activeTab",
      "storage",
      "declarativeContent",
      "tabs"
  ],
  "host_permissions": [
      "http://localhost:3000/*",
      "https://your-production-url.com/*"
  ],
  "content_scripts": [
      {
          "matches": ["https://www.indeed.com/*"],
          "js": ["content_indeed.js"]
      },
      {
          "matches": ["http://localhost:3000/*", "https://your-production-url.com/*"],
          "js": ["content_website.js"]
      }
  ],
  "background": {
      "service_worker": "background.js"
  },
  "action": {
      "default_icon": {
          "16": "favicon.ico"
      }
  },
  "icons": {
      "16": "favicon.ico"
  }
}
