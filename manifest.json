{
    "manifest_version": 3,
    "name": "Indeed Job Saver",
    "version": "1.0",
    "description": "Saves job data from Indeed to a database.",
    "permissions": [
        "activeTab",
        "storage"
    ],
    "content_scripts": [
        {
            "matches": ["https://www.indeed.com/*"],
            "js": ["content.js"]
        }
    ],
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_icon": {
            "16": "favicon.ico"
        }
    },
    "icons": {
        "16": "favicon.ico"
    }
}
